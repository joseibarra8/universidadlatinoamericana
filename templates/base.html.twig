                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('registra_usuario') }}">Registrar Usuario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('edit_user') }}">Actualizar Usuario</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    </header>

    <main role="main" class="container main">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
