{% extends 'base.html.twig' %}
{% block title %}Inicio{% endblock %}

{% block main %}
        <div>
            <h1>Editar {{ entity.nombre }}</h1>
           
            <p class="lead">

        {{ form_start(our_form) }}
        {{ form_widget(our_form.nombre, {'attr': {'value': entity.nombre }}) }}
        {{ form_widget(our_form.apellidoPaterno, {'attr': {'value': entity.apellidoPaterno }}) }}
        {{ form_widget(our_form.apellidoMaterno, {'attr': {'value': entity.apellidoMaterno }}) }}
        {{ form_widget(our_form.correo, {'attr': {'value': entity.correo }}) }}
        {{ form_widget(our_form.rol, {value: entity.rol}) }}
       
       
        <div class="form-group row">
    		<div class="col-sm-2"></div>
    		<div class="col-sm-10">
        		  <input type="submit" value="Modificar" class="btn btn-success">
    		</div>
		</div>
        {{ form_end(our_form) }}
            </p>
        </div>
{% endblock %}

